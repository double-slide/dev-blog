<div class="navbar">
  
  <div class="left">
      <%= link_to articles_path, class: "home-logo no-style" do %>
      <%= image_tag "navbar_logo.png", alt: "Logo", class: "logo" %>
      <span class="title">Tired Legs</span>
    <% end %>
  </div>
  
  <div class="right">
    <% if user_signed_in? %>
      <a>
        Welcome, <%= current_user.email %>
      </a>
      <%= link_to "Logout", logout_path, data: { turbo_method: :delete }, class: "nav-button" %>
    <% else %>
      <%= link_to "Login", login_path, class: "nav-button" %>
    <% end %>



  </div>
</div>


<div class="article-index">
<table>
  <tbody>
    <% @articles.each do |article| %>
      <tr class="index-box">
        <td><h4><%= link_to article.title, article, class: "title" %></h4></td>
        <td class="date"><%= article.created_at.to_date %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
<%= link_to "New Article", new_article_path, class: "action-button" %>
</div>
</div>


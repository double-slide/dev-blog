<%= form_with model: [ article, article.comments.build ] do |form| %>
    <div>
        <%= form.label :commenter%>
        <%= form.text_field :commenter%>
    </div>
    <div>
        <%= form.label :body %>
        <%= form.text_area :body %>
    </div>
    <div>
      <%= form.label :status %><br>
      <%= form.select :status, Visible::VALID_STATUSES, selected: article.status %><br>
    </div>
    <div>
        <%= form.submit %>
    </div>
<% end %>
